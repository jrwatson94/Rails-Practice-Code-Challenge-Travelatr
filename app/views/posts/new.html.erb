<h1>Create a New Post</h1>

<%= form_for @post do |f| %>
    <%=f.label :title %>
    <%=f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content, :minlength => 100 %>

    <%= f.label "Author:" %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>

    <%= f.submit %>
<% end %>